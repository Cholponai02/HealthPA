<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthPA.Views.NutritionViews.ArticleDetailPage"
             Title="Статья">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="15">

            <Label Text="{Binding Title}"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#3F4A55" />

             <!--Первая картинка--> 
            <Image Source="{Binding ImageUrl1}" HeightRequest="200" HorizontalOptions="Center" />

             <!--Описание статьи--> 
            <Label Text="{Binding FullText}"
                   FontSize="14"
                   TextColor="#5F5F5F"
                   LineBreakMode="WordWrap"
                   HorizontalOptions="FillAndExpand" />

             <!--Вторая картинка--> 
            <Image Source="{Binding ImageUrl2}" HeightRequest="200" HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
